                                        <!--                                                    <option>Bank1</option>-->
                                        <!--                                                    <option>Bank2</option>-->
                                        <!--                                                    <option>Bank3</option>-->
                                        <!--                                                    <option>Bank4</option>-->
                                        <!--                                                </select>-->
                                        <!--                                            </label>-->
                                        <!--                                        </div>-->
                                        <!--                                        <div class="inputBlock">-->
                                        <!--                                            <div class="inputTitle">Bank Account</div>-->
                                        <!--                                            <label>-->
                                        <!--                                                <input type="text" class="inputHT" name="bank_account"-->
                                        <!--                                                       placeholder="Bank Account"/>-->
                                        <!--                                            </label>-->
                                        <!--                                        </div>-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
